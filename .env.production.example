# Production Environment Variables for Railway
# DO NOT commit this file with actual values - this is a template

# Django Settings
SECRET_KEY=<generate-at-https://djecrety.ir/>
DJANGO_SETTINGS_MODULE=adaptapedia.settings.production
DEBUG=False
ALLOWED_HOSTS=<your-backend-domain>.railway.app
CORS_ALLOWED_ORIGINS=https://<your-frontend-domain>.railway.app

# Database (Railway PostgreSQL - auto-populated)
DATABASE_URL=${{Postgres.DATABASE_URL}}
DB_NAME=${{Postgres.PGDATABASE}}
DB_USER=${{Postgres.PGUSER}}
DB_PASSWORD=${{Postgres.PGPASSWORD}}
DB_HOST=${{Postgres.PGHOST}}
DB_PORT=${{Postgres.PGPORT}}

# Redis (Railway Redis - auto-populated)
REDIS_URL=${{Redis.REDIS_URL}}

# External APIs
TMDB_API_KEY=<get-from-https://www.themoviedb.org/settings/api>
OPEN_LIBRARY_BASE_URL=https://openlibrary.org
WIKIDATA_SPARQL_ENDPOINT=https://query.wikidata.org/sparql

# Frontend
NEXT_PUBLIC_API_URL=https://<your-backend-domain>.railway.app/api

# Optional: Error Tracking
# SENTRY_DSN=<your-sentry-dsn>
